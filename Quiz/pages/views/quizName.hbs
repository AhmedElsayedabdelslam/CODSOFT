    <style>
        body {
            background-image: url(51303296959_6063153350_b.jpg);
            color: white;
        }

        .name {
            margin: auto;
            margin-top: 200px;
          text-align: center;
        }

        .s1 {
            font-size: 30px;
        }

        #btn2 {
            margin: auto;
            margin-top: 20px;
            width: 250px;
        }
        .inp1 {
          height: 400px;
            background-color: black;
        }
        
    </style>
</head>

<body>
    <div class="name" style="width: 70%;">
        <label for="" class="s1">Please enter the Quiz Name</label><br>
        <div class="form-floating mb-3" style="margin-top: 10px;">
            <input class="form-control inp1" id="floatingInput" placeholder="The Quiz Name">
            <label for="floatingInput">Collection Name</label>
            <button class="btn  btn-dark" id="btn2">Create New Quiz</button>
        </div>




    </div>

    <script>



        const bu = document.querySelector("#btn2")
        bu.addEventListener("click", () => {
            const name = document.querySelector(".inp1").value
            fetch("http://localhost:3000/quizName", {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ name: name })
            }).then((data) => {
                {{!-- console.log("data") --}}

            }).catch((e) => {
                {{!-- console.log(e) --}}
            })
            console.log("hsdj")
            setTimeout(() => {
                let url = new URL("http://localhost:3000/addQuestion");
                url.searchParams.set('QuizName', name);
 
                window.location = url

            })
        })
        ///////////////////////////////////////////////////////////////////////////////////



    </script>

</body>

</html>